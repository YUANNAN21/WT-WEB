---
import Layout from '../layouts/Layout.astro';
import { ViewTransitions } from 'astro:transitions';
import { Image } from 'astro:assets';

const services = [
  { title: '工艺设备', description: '客制化工业设备解决方案', link: '/process-equipment', icon: '🏭' },
  { title: '化工原料', description: '化工原料供应', link: '/chemical', icon: '🧪' },
  { title: '代加工服务', description: '亚微米/纳米尺度浆料代加工服务', link: '/service', icon: '⚙️' },
];

const customers = [
  { name: 'BASF', logo: '/photos/BASF.jpg' },
  { name: '永荣', logo: '/photos/永荣.jpg' },
  { name: '海阳锦纶', logo: '/photos/海阳锦纶.png' },
  { name: '中仑', logo: '/photos/中仑.jpg' },
  { name: 'HL', logo: '/photos/HL.jpg' },
  { name: '天马', logo: '/photos/天马.jpg' },
  { name: '凯赛', logo: '/photos/凯赛.jpg' },
  { name: '象屿', logo: '/photos/象屿.jpg' },
  { name: '恒申', logo: '/photos/恒申.jpg' },
];
---

<Layout title="首页 - 厦门唯特 | 唯特 | WT-TECHNIK">
  <main>
    <section class="hero full-width">
      <div class="hero-image">
        <img src="/hero-image.png" alt="Hero Image" />
      </div>
      <div class="hero-content">
        <h1>欢迎莅临我们的网站</h1>
        <p class="hero-services">工艺设备 | 化工原料 | 代加工服务</p>
        <a href="/contact" class="cta-button">联系我们</a>
      </div>
    </section>

    <section class="services full-width">
      <h2>我们的服务</h2>
      <div class="service-grid">
        {services.map((service) => (
          <a href={service.link} class="service-card">
            <div class="service-icon">{service.icon}</div>
            <h3>{service.title}</h3>
            <p>{service.description}</p>
          </a>
        ))}
      </div>
    </section>

    <section class="customers full-width">
      <h2>我们的客户</h2>
      <div class="customer-slider-container">
        <div class="customer-slider">
          {customers.map((customer) => (
            <div class="customer-logo">
              <img src={customer.logo} alt={customer.name} />
            </div>
          ))}
        </div>
      </div>
    </section>

    <section class="about full-width">
      <h2>关于我们</h2>
      <p>厦门唯特机电有限公司成立于2006年，是一家小型技术型公司，拥有自有进出口权,愿为广大客户提供更好的服务！</p>
    </section>
  </main>
</Layout>

<style>
  body {
    margin: 0;
    padding: 0;
    width: 100%;
    overflow-x: hidden;
  }

  main {
    width: 100%;
    padding: 2rem;
  }

  .full-width {
    width: 100vw;
    position: relative;
    left: 50%;
    right: 50%;
    margin-left: -50vw;
    margin-right: -50vw;
  }

  .hero {
    position: relative;
    height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .hero-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
  }

  .hero-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .hero-content {
    text-align: center;
    color: white;
    padding: 2rem;
    background-color: rgba(0, 0, 0, 0.5);
    border-radius: 10px;
    transform: translateY(50px);
    opacity: 0;
    animation: fadeInUp 1s ease-out forwards;
  }
  .hero h1 {
    font-size: 3rem;
    margin-bottom: 1rem;
  }

  .hero p {
    font-size: 1.5rem;
    margin-bottom: 2rem;
  }

  .cta-button {
    display: inline-block;
    padding: 1rem 2rem;
    background-color: var(--color-primary);
    color: white;
    text-decoration: none;
    border-radius: 5px;
    font-weight: bold;
    transition: background-color 0.3s ease, transform 0.3s ease;
  }

  .cta-button:hover {
    background-color: var(--color-primary-dark);
    transform: translateY(-3px);
  }

  .services-section {
    padding: 4rem 2rem;
    background-color: var(--color-bg-secondary);
    transform: translateY(50px);
    opacity: 0;
    animation: fadeInUp 1s ease-out 0.5s forwards;
  }

  .services-section h2 {
    text-align: center;
    font-size: 2.5rem;
    margin-bottom: 2rem;
    color: var(--color-primary);
  }

  .service-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }

  .service-card {
    background-color: var(--color-bg);
    padding: 2rem;
    border-radius: 10px;
    text-align: center;
    text-decoration: none;
    color: var(--color-text);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  .service-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
  }

  .service-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
  }

  .service-card h3 {
    font-size: 1.5rem;
    margin-bottom: 1rem;
  }

  .customers {
    margin-bottom: 4rem;
  }

  .customers h2 {
    font-size: 2.5rem;
    color: var(--color-primary);
    text-align: center;
    margin-bottom: 2rem;
  }

  .customer-slider-container {
    overflow: hidden;
  }

  .customer-slider {
    display: flex;
    animation: slide 30s linear infinite;
  }

  .customer-logo {
    flex: 0 0 auto;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 150px;
    height: 100px;
    margin-right: 2rem;
    transition: transform 0.3s ease;
  }

  .customer-logo:hover {
    transform: scale(1.1);
  }

  .customer-logo img {
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
  }

  @keyframes slide {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(calc(-150px * 9 - 2rem * 9));
    }
  }

  .about {
    background-color: var(--color-bg-secondary);
    padding: 3rem;
    border-radius: 10px;
    text-align: center;
  }

  .about h2 {
    font-size: 2.5rem;
    color: var(--color-primary);
    margin-bottom: 1rem;
  }

  .about p {
    font-size: 1.1rem;
    line-height: 1.6;
    max-width: 800px;
    margin: 0 auto;
  }

  @media (max-width: 768px) {
    .hero-content {
      padding: 1rem;
    }

    .hero h1 {
      font-size: 2rem;
    }

    .hero p {
      font-size: 1rem;
    }

    .service-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

<script>
  function setupCustomerSlider() {
    const slider = document.querySelector('.customer-slider') as HTMLElement;
    if (slider) {
      const logos = slider.querySelectorAll('.customer-logo');
      logos.forEach(logo => {
        const clone = logo.cloneNode(true);
        slider.appendChild(clone);
      });
    }
  }

  function adjustLogoHeight() {
    const logos = document.querySelectorAll('.customer-logo img') as NodeListOf<HTMLImageElement>;
    let maxHeight = 0;
    
    logos.forEach(logo => {
      logo.style.height = 'auto';
      maxHeight = Math.max(maxHeight, logo.offsetHeight);
    });

    logos.forEach(logo => {
      logo.style.height = `${maxHeight}px`;
    });
  }

  document.addEventListener('astro:page-load', () => {
    setupCustomerSlider();
    adjustLogoHeight();
  });
</script>
