---
import Layout from '../../layouts/Layout.astro';
import { Image } from 'astro:assets';

// 导入化工原料图片
import titaniumDioxideImage from '../../images/titanium-dioxide.jpg';
import bariumSulfateImage from '../../images/barium-sulfate.jpg';

const chemicals = [
  {
    name: '锐钛型二氧化钛',
    description: '高品质白色颜料,广泛应用于涂料、塑料、造纸等行业,具有优异的遮盖力和耐候性。',
    image: titaniumDioxideImage,
  },
  {
    name: '硫酸钡',
    description: '重要的填料和功能材料,用于油漆、橡胶、塑料等行业,具有良好的耐酸碱性和填充性能。',
    image: bariumSulfateImage,
  },
];
---

<Layout title="化工原料 - 厦门唯特 | 唯特 | WT-TECHNIK">
  <main class="container">
    <h1>化工原料</h1>
    <p class="intro">为您的生产提供高品质化工原料</p>
    
    <div class="product-grid">
      {chemicals.map((chemical) => (
        <div class="product-card">
          <div class="image-container">
            <Image 
              src={chemical.image} 
              alt={chemical.name}
              width={400} 
              height={300} 
              format="webp"
            />
          </div>
          <h2>{chemical.name}</h2>
          <p>{chemical.description}</p>
          <div class="button-container">
            <a href={`/chemical/${chemical.name.toLowerCase().replace(/\s+/g, '-')}`} class="learn-more">了解更多</a>
          </div>
        </div>
      ))}
    </div>
  </main>
</Layout>

<style>
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
  }

  h1 {
    color: #EC6C39;
    text-align: center;
    margin-bottom: 1rem;
  }

  .intro {
    text-align: center;
    color: #666;
    margin-bottom: 2rem;
  }

  .product-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .product-card {
    background-color: #f9f9f9;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease;
    display: flex;
    flex-direction: column;
    padding: 1rem;
  }

  .image-container {
    width: 100%;
    height: 250px;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: #f0f0f0;
    border-radius: 4px;
    overflow: hidden;
    margin-bottom: 1rem;
  }

  .image-container img {
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
  }

  .product-card h2 {
    color: #333;
    margin: 0 0 0.5rem 0;
  }

  .product-card p {
    color: #666;
    margin-bottom: 1rem;
    flex-grow: 1;
  }

  .button-container {
    display: flex;
    justify-content: center;
    margin-top: auto;
  }

  .learn-more {
    display: inline-block;
    background-color: #EC6C39;
    color: white;
    text-decoration: none;
    padding: 0.5rem 1rem;
    border-radius: 4px;
    transition: background-color 0.3s ease;
  }

  .learn-more:hover {
    background-color: #d55a2b;
  }

  @media (max-width: 768px) {
    .product-grid {
      grid-template-columns: 1fr;
    }
  }
</style>