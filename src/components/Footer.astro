<style>
  footer {
    background-color: #393737;
    padding: 2rem 0;
    text-align: center;
    width: 100%;
    color: #E0E0E0;
  }
  .footer-content {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }
  p {
    margin: 0;
    line-height: 1.5;
  }
  p:first-of-type {
    margin-bottom: 0.5rem;
  }
  a {
    color: #E0E0E0;
    text-decoration: none;
    transition: color 0.3s ease;
  }
  a:hover {
    color: #10c23f;
  }
  .social-links {
    display: flex;
    justify-content: center;
    gap: 1rem;
    margin-bottom: 1rem;
  }
  .social-links a {
    color: #E0E0E0;
    transition: color 0.3s ease;
  }
  .social-links a:hover {
    color: #10c23f;
  }
  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border-width: 0;
  }
</style>